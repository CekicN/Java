package nizovi;

import java.io.*;
import java.nio.Buffer;

public class Vektor {
	private int n;
	private float[] niz;
	private String fajl;
	public Vektor(String fajl)
	{
		this.fajl = fajl;
	}
	public void CitanjeVer()
	{
		try {
			FileReader f= new FileReader(fajl);
			BufferedReader b = new BufferedReader(f);
			
			n = Integer.parseInt(b.readLine());
			niz = new float[n];
			
			for (int i = 0; i < niz.length; i++) {
				niz[i] = Float.parseFloat(b.readLine());
				System.out.println(niz[i]);
			}
			b.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	public void CitanjeHor()
	{
		try {
			FileReader f= new FileReader(fajl);
			BufferedReader b = new BufferedReader(f);
			
			String e = b.readLine();
			b.close();
			
			String[] pom = e.split(" ");
			n = Integer.parseInt(pom[0]);
			niz = new float[n];
			
			for (int i = 1; i <= n; i++) {
				niz[i-1] = Float.parseFloat(pom[i]);
				System.out.println(niz[i-1]);
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	public void CiranjeBin()
	{
		try {
			FileInputStream f = new FileInputStream(fajl);
			BufferedInputStream b = new BufferedInputStream(f);
			DataInputStream d = new DataInputStream(b);
			
			n = d.readInt();
			niz = new float[n];
			for (int i = 0; i < niz.length; i++) {
				niz[i] = d.readFloat();
				System.out.println(niz[i]);
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	public void PisiVer()
	{
		try {
			FileWriter f = new FileWriter(fajl);
			BufferedWriter b = new BufferedWriter(f);
			b.write(String.valueOf(n));
			b.newLine();
			for (int i = 0; i < n; i++) {
				b.write(String.valueOf(niz[i]));	
			}
			b.close();
		} catch (IOException e) {
			System.out.println(e);
		}
	}
	public void PisiHor()
	{
		try {
			FileWriter f = new FileWriter(fajl);
			BufferedWriter b = new BufferedWriter(f);
			String s = String.valueOf(n);
			for (int i = 0; i < n; i++) {
				s += String.valueOf(niz[i]);	
			}
			b.write(String.valueOf(n));
			b.newLine();
			
			b.close();
		} catch (IOException e) {
			System.out.println(e);
		}
	}
}
