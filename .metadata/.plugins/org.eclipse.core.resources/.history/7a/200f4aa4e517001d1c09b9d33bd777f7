
public class Poruka {
	private String tekst;
	private static int br_poruka = 0;
	private static Poruka p = new Poruka();
	
	private Poruka()
	{}
	public static Poruka uzmi()
	{
		return p;
	}
	public void postavi(String tekst)
	{
		this.tekst = tekst;
		br_poruka++;
	}
	public void prikazi()
	{
		System.out.println(tekst + " ," + br_poruka);
	}
}
