
public class Poruka {
	private String tekst;
	private static int br_poruka = 0;
	private Poruka p;
	
	private Poruka()
	{}
	public Poruka uzmi()
	{
		if (p == null) {
			p = new Poruka();
		}
		return p;
	}
	public void postavi(String tekst)
	{
		this.tekst = tekst;
		br_poruka++;
	}
	public void prikazi()
	{
		System.out.println(tekst + " ," + br_poruka);
	}
}
